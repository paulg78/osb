<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit <%= student.fname + " " + student.lname %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/students/<%=student._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <h5>First Name*:</h5>
                    <input class="form-control" type="text" name="firstName" value="<%= student.fname %>">
                </div>
                <div class="form-group">
                    <h5>Last Name*:</h5>
                    <input class="form-control" type="text" name="lastName" value="<%= student.lname %>">
                </div>
                <div class="form-group">
                    <h5>Grade (1-12)*:</h5>
                    <input class="form-control" type="text" name="grade" value="<%= student.grade %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Save</button>
                </div>
            </form>
            <a href="/students">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

