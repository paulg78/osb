    <body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <p>Operation School <span class="glyphicon glyphicon-bell"></span>&nbsp;&nbsp;</p>
            </div>
            <ul class="nav navbar-nav">
                <% if(currentUser){ %>
                    <a class="navbar-brand role_al role_wa" href="/schools/uploadSchools">Upload Schools</a>
                    <a class="navbar-brand role_al role_wa" href="/users/uploadUsers">Upload Users</a>
                    <a class="navbar-brand role_al role_wa" href="/users">Users</a>
                    <a class="navbar-brand role_sc role_al role_wa" href="/events">Days</a>
                    <a class="navbar-brand role_al role_sc role_wa" href="/students">Students</a>
                    <a class="navbar-brand role_al role_wa" href="/schools">Schools</a>
                    <a class="navbar-brand role_wa" href="/events/fixSlots">fixSlots</a>
                    <a class="navbar-brand role_wa" href="/events/fixStudents">fixStudents</a>
                <% } %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <% if(currentUser){ %>
                    <li><p>Signed In As <%= currentUser.name %></p></li>
                    <li><a href="/logout">Logout</a></li>
                    <span class="hidden" id="userRole"><%= currentUser.role %></span>
                <% } else { %>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/requestpwreset">Register or Reset Password</a></li>
                <% } %>
                <li><a href="/help">Help</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
       <% if(error && error.length > 0) { %>
         <div class="alert alert-danger"><p><%=error %></p></div>
       <% } %>

       <% if(success && success.length > 0) { %>
         <div class="alert alert-success"><p><%= success %></p></div>
       <% } %>
    </div>
