<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Create a New user</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/users" method="POST">
                <div class="form-group">
                    <label>Full Name:</label>
                    <input class="form-control" type="text" name="name">
                </div>
                <div class="form-group">
                    <label>Email Address:</label>
                    <input class="form-control" type="email" name="email">
                </div>
                <div class="form-group">
                    <label>School:</label>
                    <input class="form-control" type="text" name="school">
                    <p>For counselor, must exactly match a school name in the database. Blank for other roles.</p>
                </div>
                <div class="form-group">
                    <label>Username:</label>
                    <input class="form-control" type="text" name="username">
                    <p>Initial value is PIN (stored as a string). Can be changed to a non-numeric value.</p>
                </div>
                <div class="form-group">
                    <label>Role:</label>
                    <select name="role">
                        <option value="role_sc" selected>school counselor</option>
                        <option value="role_al">Assistance League</option>
                        <option class="role_wa" value="role_wa">Website administrator</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>PIN:</label>
                    <input class="form-control" type="text" name="PIN">
                    <p>Unique number assigned when user is created. Used to create/reset username/password.</p>
                </div>
                <div class="form-group">
                    <button type=submit class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/users">Cancel</a>
        </div>
    </div>
<% include ../partials/footer %>

