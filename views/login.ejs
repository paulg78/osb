<% include ./partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Login</h1>
        <div style="width: 40%; margin: 25px auto;">
            <form action="/login" method="post">
                <div class="form-group">
                    <h4>Username:</h4>
                    <input class="form-control" type="text" name="username" aria-describedby="helpUname">
                    <span id="helpUserName" class="help-block">Username is the same as your email address unless you have changed your username or you support multiple schools using the same email address.</span>
                    
                    <h4 style="margin-top: 25px;">Password:</h4>
                    <input class="form-control" type="password" name="password">
                    <p></p>
                    <button class="btn btn-lg btn-primary btn-block">Login</button>
                </div>
            </form>
            <a href="/requestpwreset">Go to Set or Reset Username/Password</a>
            <p>(You are enabled for login if you have created a password.)</p>
        </div>
    </div>
</div>
<% include ./partials/footer %>