<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit School Quota</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/schools/<%=school._id%>?_method=PUT" method="POST">
                <h2><%= school.name %></h2>
                <div class="form-group">
                    <label>School Code:</label>
                    <input class="form-control" type="text" name="schoolCode" value="<%= school.schoolCode %>">
                </div>                
                <div class="form-group">
                    <label>School Name:</label>
                    <input class="form-control" type="text" name="name" value="<%= school.name %>">
                </div>
                <div class="form-group">
                    <label>District:</label>
                    <input class="form-control" type="text" name="district" value="<%= school.district %>">
                </div>                
                <div class="form-group">
                    <label>Student Quota:</label>
                    <input class="form-control" type="text" name="quota" value="<%= school.quota %>">
                </div>
                <button type=submit class="btn btn-lg btn-primary btn-block">Submit</button>
                <a href="/schools">Cancel</a>
            </form>
        </div>
    </div>
<% include ../partials/footer %>
