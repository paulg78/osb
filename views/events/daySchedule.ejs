<% include ../partials/header %>
<div class="container">
    <h2 style="text-align: center">Add Students <%= day.date %></h2>
    <span class="hidden" id="dayId"><%= day._id %></span>
    <div class="row">
        <div class="col-sm-10">
            <div class="row" style="display:flex; flex-wrap: wrap;">
                <% day.slots.forEach(function(slot){ %>
                    <div class="col-sm-3 solidborder">
                        <span class="hidden" type="text" name="slotId"><%= slot._id %></span>
                        <form class="form-inline" method="POST">
                        <strong><%= slot.time %></strong>
                        <% var remaining = slot.max - slot.students.length; %>   
                        <% if (remaining > 0) { %>
                            <%= " (" + remaining + ")  " %>
                            <button type=submit class="addStudBtn" disabled=disabled name="addStudentBtn">+</button>
                            </form>
                            <% } %>
                          <form class="form-inline" method="POST">
                                    <button type=submit style="display: none;" class="RemStudBtn" name="remStudentBtn">-</button>
                            </form>                    
                    <ul class="list-group">
                        <% slot.students.forEach(function(student){ %>
                            <% if (student.school == school) { %>
                                <li class="list-group-item" style="height: 25px; padding: 2px 10px;" name="schedStud"><%= student.fullName %>
                                    <span name="studentId" class="hidden"><%= student._id %></span></li>
                            <% } %>
                        <% }) %>
                    </ul>                        

                    </div>
                <% }) %>
            </div>
        </div>
        <div class="col-sm-2">
            <h4>Unscheduled:</h4>
            <ul class="list-group">
                <% students.forEach(function(student) { %>
                    <li class="list-group-item" style="height: 30px; padding: 5px 15px;" name="unschedStud"><%= student.fullName + "(" + student.grade + ")"%>
                    <span name="studentId" class="hidden"><%= student._id %></span></li>
                <% }) %>
            </ul>
        </div>  
    </div>
    <div style="width: 30%; margin: 25px auto;"class="well">
          <a href="/events/<%= event._id %>/days">Go Back</a>
    </div> 
</div>
 
<script src="/scripts/selectStudent.js"></script>
<% include ../partials/footer %>
