<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit Slot</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/days/<%= day_id %>/slots/<%=slot._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=slot.text %>" name="slot[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/days">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

